<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffc9af"
    android:scrollIndicators="right"
    android:visibility="visible">

    <TextView
        android:id="@+id/textViewPantryPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:text="Pantry Page"
        android:textColor="#050505"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.079" />

    <TextView
        android:id="@+id/textViewMyPantry"
        android:layout_width="231dp"
        android:layout_height="49dp"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-light"
        android:text="My Pantry"
        android:textAlignment="center"
        android:textColor="#494848"
        android:textSize="34sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.263" />

    <AutoCompleteTextView
        android:id="@+id/autoCompleteSearch"
        android:layout_width="311dp"
        android:layout_height="48dp"
        android:backgroundTint="#F5050505"
        android:fontFamily="sans-serif-medium"
        android:hint="Search ingredients"
        android:textAlignment="viewStart"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.189" />

    <Button
        android:id="@+id/buttonGetRecipes"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Get Recipe Recommendations"
        android:backgroundTint="#d3a087"
        android:textColor="#050505"
        android:fontFamily="sans-serif-medium"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/recyclerViewPantry"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewMyPantry"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textViewLoading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loading recipe recommendations..."
        android:textColor="#494848"
        android:fontFamily="sans-serif-light"
        android:textSize="16sp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/buttonGetRecipes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/recyclerViewPantry"
        app:layout_constraintVertical_bias="0.55" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewPantry"
        android:layout_width="297dp"
        android:layout_height="330dp"
        android:background="#d3a087"
        android:scrollbars="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.836" />

    <ScrollView
        android:layout_width="297dp"
        android:layout_height="230dp"
        android:background="#d3a087"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/recyclerViewPantry"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.3">

        <TextView
            android:id="@+id/textViewRecipeResults"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:textColor="#050505"
            android:fontFamily="sans-serif-light"
            android:textSize="16sp" />
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
